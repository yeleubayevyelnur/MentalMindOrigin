<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EnterButtonText" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorStrongGray</item>
    </style>

    <style name="PrimaryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="SecondaryTitleText" parent="AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>