<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Enter Button's text Style -->
    <style name="EnterButtonText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorStrongGray</item>
    </style>

    <!--Title primary text style -->
    <style name="PrimaryTitleText" parent="AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Title Secondary text style -->
    <style name="SecondaryTitleText" parent="AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>