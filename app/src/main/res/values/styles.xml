<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="EnterButtonText" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorStrongGray</item>
    </style>

    <style name="PrimaryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="LevelText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryTitleText" parent="AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExtraSmallTextSize12" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ExtraSmallGrayTextSize12" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorStrongGray</item>
    </style>

    <style name="SmallTextSize14" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallRegularTextSize14" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorStrongGray</item>
    </style>

    <style name="StandartTextSize16" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTitleTextSize18" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularTextSize20" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularBoldTextSize20" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>